doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Productos
  link(rel='stylesheet', href='../../static/css/bootstrap.min.css', crossorigin='anonymous')
  link(rel='stylesheet', href='../../static/js/bootstrap.bundle.min.js', crossorigin='anonymous')
  link(rel='stylesheet', href='../../static/js/jquery.min.js', crossorigin='anonymous')
  script(src='../../static/css/all.css', crossorigin='anonymous')
header
  nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
    .container-fluid
      button.navbar-toggler.navbar-toggler-right.border-0.p-0(type='button', data-toggle='collapse', data-target='#navbar20')
        p.navbar-brand.text-white.mb-0
          i.fa.d-inline.fa-lg.fa-stop-circle
          |  ECommerce
      #navbar20.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Registro
          li.nav-item
            a.nav-link(href='/api/productos') Productos
        p.d-none.d-md-block.lead.mb-0.text-white
          i.fa.d-inline.fa-lg.fa-stop-circle
          b  
        ul.navbar-nav.ml-auto
          li.nav-item.mx-1
            a.nav-link(href='/#')
              i.fa.fa-github.fa-fw.fa-lg
          li.nav-item.mx-1
            a.nav-link(href='/#')
              i.fa.fa-dropbox.fa-fw.fa-lg
          li.nav-item.mx-1
            a.nav-link(href='/#')
              i.fa.fa-bitbucket.fa-fw.fa-lg
main
  .container-fluid.bg-trasparent.my-4.p-3(style='position: relative')
    .row.row-cols-1.row-cols-xs-2.row-cols-sm-2.row-cols-lg-4.g-3
      each articulo in artuculos
        .col
          .card.h-100.shadow-sm
            img.card-img-top(src=`${articulo.thumbnail}`, alt=`Imagen de ${articulo.title}`)
            .card-body
              .clearfix.mb-3
                span.float-start.badge.rounded-pill.bg-primary #{articulo.title}
                span.float-end.price-hp #{articulo.price}
              h5.card-title
                Hola
              .text-center.my-4
                a.btn.btn-warning(href='#') Compra


